            "children": [
              {
                "kind": "text",
                "value": {
                  "expr": "lit",
                  "value": "-"
                }
              }
            ]
          },
          {
            "kind": "element",
            "tag": "button",
            "props": {
              "class": {
                "expr": "lit",
                "value": "flex h-12 w-12 items-center justify-center rounded-lg border border-border text-xl font-semibold transition-colors hover:bg-muted"
              },
              "onClick": {
                "event": "click",
                "action": "increment"
              }
            },
            "children": [
              {
                "kind": "text",
                "value": {
                  "expr": "lit",
                  "value": "+"
