{
  "version": "1.0",
  "route": {
    "path": "/examples",
    "layout": "main",
    "meta": {
      "title": "Examples - Constela",
      "description": "Explore these examples to learn how to build UIs with Constela.",
      "og:title": "Examples - Constela",
      "og:description": "Explore these examples to learn how to build UIs with Constela.",
      "og:image": "https://constela.dev/og-image.png",
      "og:url": "https://constela.dev/examples",
      "og:type": "website",
      "twitter:card": "summary_large_image",
      "twitter:image": "https://constela.dev/og-image.png"
    }
  },
  "imports": {
    "examples": "../../data/examples.json"
  },
  "view": {
    "kind": "element",
    "tag": "div",
    "props": {
      "class": { "expr": "lit", "value": "mx-auto max-w-4xl px-6 py-12 space-y-8" }
    },
    "children": [
      {
        "kind": "element",
        "tag": "header",
        "children": [
          {
            "kind": "element",
            "tag": "h1",
            "props": {
              "class": { "expr": "lit", "value": "text-3xl font-bold text-foreground" }
            },
            "children": [
              { "kind": "text", "value": { "expr": "lit", "value": "Examples" } }
            ]
          },
          {
            "kind": "element",
            "tag": "p",
            "props": {
              "class": { "expr": "lit", "value": "mt-2 text-lg text-muted-foreground" }
            },
            "children": [
              { "kind": "text", "value": { "expr": "lit", "value": "Explore these examples to learn how to build UIs with Constela." } }
            ]
          }
        ]
      },
      {
        "kind": "element",
        "tag": "div",
        "props": {
          "class": { "expr": "lit", "value": "grid gap-4 sm:grid-cols-2" }
        },
        "children": [
          {
            "kind": "each",
            "items": { "expr": "import", "name": "examples", "path": "examples" },
            "as": "example",
            "body": {
              "kind": "element",
              "tag": "a",
              "props": {
                "href": {
                  "expr": "bin",
                  "op": "+",
                  "left": { "expr": "lit", "value": "/examples/" },
                  "right": { "expr": "var", "name": "example", "path": "slug" }
                },
                "class": { "expr": "lit", "value": "group block rounded-lg border border-border bg-background p-6 transition-colors hover:border-primary hover:bg-muted/50" }
              },
              "children": [
                {
                  "kind": "element",
                  "tag": "h3",
                  "props": {
                    "class": { "expr": "lit", "value": "text-lg font-semibold text-foreground group-hover:text-primary" }
                  },
                  "children": [
                    { "kind": "text", "value": { "expr": "var", "name": "example", "path": "title" } }
                  ]
                },
                {
                  "kind": "element",
                  "tag": "p",
                  "props": {
                    "class": { "expr": "lit", "value": "mt-2 text-sm text-muted-foreground" }
                  },
                  "children": [
                    { "kind": "text", "value": { "expr": "var", "name": "example", "path": "description" } }
                  ]
                },
                {
                  "kind": "element",
                  "tag": "div",
                  "props": {
                    "class": { "expr": "lit", "value": "mt-4 flex flex-wrap gap-2" }
                  },
                  "children": [
                    {
                      "kind": "each",
                      "items": { "expr": "var", "name": "example", "path": "featuresPreview" },
                      "as": "feature",
                      "body": {
                        "kind": "element",
                        "tag": "span",
                        "props": {
                          "class": {
                            "expr": "cond",
                            "if": { "expr": "bin", "op": "==", "left": { "expr": "var", "name": "feature", "path": "category" }, "right": { "expr": "lit", "value": "state" } },
                            "then": { "expr": "lit", "value": "rounded-full backdrop-blur-md bg-purple-400/10 border border-purple-400/20 px-3 py-1 text-xs font-medium text-purple-600 dark:text-purple-300 shadow-sm transition-all hover:bg-purple-400/20 hover:border-purple-400/30" },
                            "else": {
                              "expr": "cond",
                              "if": { "expr": "bin", "op": "==", "left": { "expr": "var", "name": "feature", "path": "category" }, "right": { "expr": "lit", "value": "action" } },
                              "then": { "expr": "lit", "value": "rounded-full backdrop-blur-md bg-cyan-400/10 border border-cyan-400/20 px-3 py-1 text-xs font-medium text-cyan-600 dark:text-cyan-300 shadow-sm transition-all hover:bg-cyan-400/20 hover:border-cyan-400/30" },
                              "else": {
                                "expr": "cond",
                                "if": { "expr": "bin", "op": "==", "left": { "expr": "var", "name": "feature", "path": "category" }, "right": { "expr": "lit", "value": "component" } },
                                "then": { "expr": "lit", "value": "rounded-full backdrop-blur-md bg-pink-400/10 border border-pink-400/20 px-3 py-1 text-xs font-medium text-pink-600 dark:text-pink-300 shadow-sm transition-all hover:bg-pink-400/20 hover:border-pink-400/30" },
                                "else": { "expr": "lit", "value": "rounded-full backdrop-blur-md bg-gray-400/10 dark:bg-white/5 border border-gray-400/20 dark:border-white/10 px-3 py-1 text-xs font-medium text-gray-600 dark:text-gray-300 shadow-sm transition-all hover:bg-gray-400/20 dark:hover:bg-white/10 hover:border-gray-400/30 dark:hover:border-white/20" }
                              }
                            }
                          }
                        },
                        "children": [
                          { "kind": "text", "value": { "expr": "var", "name": "feature", "path": "name" } }
                        ]
                      }
                    },
                    {
                      "kind": "each",
                      "items": { "expr": "var", "name": "example", "path": "featuresExtra" },
                      "as": "feature",
                      "body": {
                        "kind": "element",
                        "tag": "span",
                        "props": {
                          "class": {
                            "expr": "cond",
                            "if": { "expr": "bin", "op": "==", "left": { "expr": "var", "name": "feature", "path": "category" }, "right": { "expr": "lit", "value": "state" } },
                            "then": { "expr": "lit", "value": "hidden group-hover:inline-flex rounded-full backdrop-blur-md bg-purple-400/10 border border-purple-400/20 px-3 py-1 text-xs font-medium text-purple-600 dark:text-purple-300 shadow-sm transition-all hover:bg-purple-400/20 hover:border-purple-400/30" },
                            "else": {
                              "expr": "cond",
                              "if": { "expr": "bin", "op": "==", "left": { "expr": "var", "name": "feature", "path": "category" }, "right": { "expr": "lit", "value": "action" } },
                              "then": { "expr": "lit", "value": "hidden group-hover:inline-flex rounded-full backdrop-blur-md bg-cyan-400/10 border border-cyan-400/20 px-3 py-1 text-xs font-medium text-cyan-600 dark:text-cyan-300 shadow-sm transition-all hover:bg-cyan-400/20 hover:border-cyan-400/30" },
                              "else": {
                                "expr": "cond",
                                "if": { "expr": "bin", "op": "==", "left": { "expr": "var", "name": "feature", "path": "category" }, "right": { "expr": "lit", "value": "component" } },
                                "then": { "expr": "lit", "value": "hidden group-hover:inline-flex rounded-full backdrop-blur-md bg-pink-400/10 border border-pink-400/20 px-3 py-1 text-xs font-medium text-pink-600 dark:text-pink-300 shadow-sm transition-all hover:bg-pink-400/20 hover:border-pink-400/30" },
                                "else": { "expr": "lit", "value": "hidden group-hover:inline-flex rounded-full backdrop-blur-md bg-gray-400/10 dark:bg-white/5 border border-gray-400/20 dark:border-white/10 px-3 py-1 text-xs font-medium text-gray-600 dark:text-gray-300 shadow-sm transition-all hover:bg-gray-400/20 dark:hover:bg-white/10 hover:border-gray-400/30 dark:hover:border-white/20" }
                              }
                            }
                          }
                        },
                        "children": [
                          { "kind": "text", "value": { "expr": "var", "name": "feature", "path": "name" } }
                        ]
                      }
                    },
                    {
                      "kind": "if",
                      "condition": { "expr": "bin", "op": ">", "left": { "expr": "var", "name": "example", "path": "featuresExtraCount" }, "right": { "expr": "lit", "value": 0 } },
                      "then": {
                        "kind": "element",
                        "tag": "span",
                        "props": {
                          "class": { "expr": "lit", "value": "group-hover:hidden rounded-full backdrop-blur-md bg-white/5 border border-dashed border-white/20 px-2.5 py-1 text-xs text-muted-foreground cursor-pointer hover:bg-white/10 hover:border-white/30" }
                        },
                        "children": [
                          { "kind": "text", "value": { "expr": "bin", "op": "+", "left": { "expr": "lit", "value": "+" }, "right": { "expr": "var", "name": "example", "path": "featuresExtraCount" } } }
                        ]
                      }
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    ]
  }
}
