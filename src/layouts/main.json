{
  "version": "1.0",
  "type": "layout",
  "imports": {
    "config": "../data/config.json",
    "nav": "../data/navigation.json"
  },
  "state": {
    "theme": { "type": "string", "initial": { "expr": "cookie", "key": "theme", "default": "dark" } },
    "mobileMenuOpen": { "type": "boolean", "initial": false }
  },
  "actions": [
    {
      "name": "toggleTheme",
      "steps": [
        {
          "do": "set",
          "target": "theme",
          "value": {
            "expr": "cond",
            "if": { "expr": "bin", "op": "==", "left": { "expr": "state", "name": "theme" }, "right": { "expr": "lit", "value": "dark" } },
            "then": { "expr": "lit", "value": "light" },
            "else": { "expr": "lit", "value": "dark" }
          }
        },
        {
          "do": "dom",
          "operation": "removeClass",
          "selector": { "expr": "lit", "value": "html" },
          "value": {
            "expr": "cond",
            "if": { "expr": "bin", "op": "==", "left": { "expr": "state", "name": "theme" }, "right": { "expr": "lit", "value": "dark" } },
            "then": { "expr": "lit", "value": "light" },
            "else": { "expr": "lit", "value": "dark" }
          }
        },
        {
          "do": "dom",
          "operation": "addClass",
          "selector": { "expr": "lit", "value": "html" },
          "value": { "expr": "state", "name": "theme" }
        }
      ]
    },
    {
      "name": "openMobileMenu",
      "steps": [
        {
          "do": "set",
          "target": "mobileMenuOpen",
          "value": { "expr": "lit", "value": true }
        },
        {
          "do": "dom",
          "operation": "addClass",
          "selector": { "expr": "lit", "value": "body" },
          "value": { "expr": "lit", "value": "overflow-hidden" }
        }
      ]
    },
    {
      "name": "closeMobileMenu",
      "steps": [
        {
          "do": "set",
          "target": "mobileMenuOpen",
          "value": { "expr": "lit", "value": false }
        },
        {
          "do": "dom",
          "operation": "removeClass",
          "selector": { "expr": "lit", "value": "body" },
          "value": { "expr": "lit", "value": "overflow-hidden" }
        }
      ]
    }
  ],
  "view": {
    "kind": "element",
    "tag": "div",
    "props": {
      "class": { "expr": "lit", "value": "min-h-screen bg-background" }
    },
    "children": [
      {
        "kind": "element",
        "tag": "header",
        "props": {
          "class": { "expr": "lit", "value": "fixed top-0 left-0 right-0 z-40 h-[var(--header-height)] border-b border-transparent bg-background" }
        },
        "children": [
          {
            "kind": "element",
            "tag": "div",
            "props": {
              "class": { "expr": "lit", "value": "mx-auto flex h-full max-w-7xl items-center justify-between px-6" }
            },
            "children": [
              {
                "kind": "element",
                "tag": "div",
                "props": {
                  "class": { "expr": "lit", "value": "flex items-center gap-4" }
                },
                "children": [
                  {
                    "kind": "element",
                    "tag": "button",
                    "props": {
                      "class": { "expr": "lit", "value": "flex h-9 w-9 items-center justify-center rounded-md border border-border transition-colors hover:bg-muted md:hidden" },
                      "aria-label": { "expr": "lit", "value": "Open menu" },
                      "onClick": { "event": "click", "action": "openMobileMenu" }
                    },
                    "children": [
                      {
                        "kind": "element",
                        "tag": "svg",
