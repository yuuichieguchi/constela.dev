                          "stroke-linecap": { "expr": "lit", "value": "round" },
                          "stroke-linejoin": { "expr": "lit", "value": "round" },
                          "class": { "expr": "lit", "value": "h-5 w-5" }
                        },
                        "children": [
                          { "kind": "element", "tag": "line", "props": { "x1": { "expr": "lit", "value": "3" }, "y1": { "expr": "lit", "value": "12" }, "x2": { "expr": "lit", "value": "21" }, "y2": { "expr": "lit", "value": "12" } } },
                          { "kind": "element", "tag": "line", "props": { "x1": { "expr": "lit", "value": "3" }, "y1": { "expr": "lit", "value": "6" }, "x2": { "expr": "lit", "value": "21" }, "y2": { "expr": "lit", "value": "6" } } },
