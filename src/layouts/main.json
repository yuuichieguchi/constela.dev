                    },
                    "children": [
                      { "kind": "text", "value": { "expr": "lit", "value": "Constela" } }
                    ]
                  },
                  {
                    "kind": "element",
                    "tag": "nav",
                    "props": {
                      "class": { "expr": "lit", "value": "hidden items-center gap-6 md:flex" }
                    },
                    "children": [
                      {
                        "kind": "each",
                        "items": { "expr": "import", "name": "nav", "path": "topNav" },
